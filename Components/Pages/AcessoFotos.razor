@page "/AcessoFotos"

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acesso de Fotos</title>
    <link href="/bootstrap/acessofotos.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <h1>Acesso de Fotos</h1>
            </div>

            <!-- Barra de busca abaixo do título -->
            <div class="search-container">
                <input type="text" placeholder="Buscar por data" class="search-bar">
            </div>

            <div class="photos-section">
                <h2>Minhas fotos</h2>
                <div class="photo-grid">
                    <div class="photo-card">
                        <span class="plus">+</span>
                        <p>Fotos</p>
                    </div>
                    <div class="photo-card">
                        <span class="plus">+</span>
                        <p>Fotos</p>
                    </div>
                </div>
            </div>

            <div class="actions">
                <div class="action-column">
                    <h3>Baixar fotos</h3>
                    <button class="btn"><i class="fas fa-plus-square"></i> Adicionar e baixar</button>
                    <button class="btn"><i class="fas fa-download"></i> Baixar fotos</button>
                </div>
                <div class="action-column">
                    <h3>Compartilhar</h3>
                    <button class="btn">
                        <span class="icons-text">
                            <i class="fab fa-whatsapp"></i>
                            <i class="fab fa-instagram"></i>
                            WhatsApp ou Instagram
                        </span>
                    </button>
                    <button class="btn"><i class="fas fa-share"></i> Outros</button>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
