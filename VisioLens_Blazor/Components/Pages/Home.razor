@page "/"

<PageTitle>Home</PageTitle>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisioLens - Dashboard</title>
    <link rel="stylesheet" href="style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <img src="img/LogoVisioLens.jpg" alt="LogoVisioLens">
        </div>
        <nav>
            <ul>
                <li class="active"><i class="fa fa-home"></i> TELA INICIAL</li>
                <li><i class="fa fa-camera"></i> SESSÃO</li>
                <li><i class="fa fa-file-invoice-dollar"></i> ORÇAMENTO</li>
                <li><i class="fa fa-box"></i> PACOTE</li>
                <li><i class="fa fa-calendar"></i> AGENDAMENTOS</li>
                <li><i class="fa fa-user"></i> LISTA DE CLIENTES</li>
                <li><i class="fa fa-users"></i> LISTA DE COLABORADORES</li>
                <li><i class="fa fa-list"></i> LISTA DE AGENDAMENTO</li>
                <li><i class="fa fa-cog"></i> CONFIGURAÇÃO</li>
            </ul>
        </nav>
    </aside>

    <!-- Main -->
    <main class="main">
        <header>
            <h1>INICIAL</h1>
            <p class="welcome">Bem-vindo(a), Usuário!</p>
        </header>

        <section class="top-cards">
            <div class="card">
                <i class="fa fa-calendar-day"></i>
                <p class="label">Agendamentos de hoje</p>
                <p class="value">5</p>
            </div>
            <div class="card">
                <i class="fa fa-user"></i>
                <p class="label">Clientes cadastrados</p>
                <p class="value">215</p>
            </div>
            <div class="card">
                <i class="fa fa-scissors"></i>
                <p class="label">Serviços realizados neste mês</p>
                <p class="value">32</p>
            </div>
            <div class="card">
                <i class="fa fa-bell"></i>
                <p class="label">Notificações pendentes</p>
                <p class="value">4</p>
            </div>
        </section>

        <section class="actions">
            <button>Novo Agendamento</button>
            <button>Cadastrar Cliente</button>
            <button>Verificar Relatórios</button>
        </section>
    </main>

</body>
</html>

