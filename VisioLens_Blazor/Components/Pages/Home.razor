@page "/"

<PageTitle>Home</PageTitle>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisioLens - Dashboard</title>
    <link rel="stylesheet" href="style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <main class="main">
        <header>
            <h1>INICIAL</h1>
            <p class="welcome">Bem-vindo(a), Usuário!</p>
        </header>

        <section class="top-cards">
            <div class="card">
                <i class="fa fa-calendar-day"></i>
                <p class="label">Agendamentos de hoje</p>
                <p class="value">5</p>
            </div>
            <div class="card">
                <i class="fa fa-user"></i>
                <p class="label">Clientes cadastrados</p>
                <p class="value">215</p>
            </div>
            <div class="card">
                <i class="fa fa-scissors"></i>
                <p class="label">Serviços realizados neste mês</p>
                <p class="value">32</p>
            </div>
            <div class="card">
                <i class="fa fa-bell"></i>
                <p class="label">Notificações pendentes</p>
                <p class="value">4</p>
            </div>
        </section>

        <section class="actions">
            <button>Novo Agendamento</button>
            <button>Cadastrar Cliente</button>
            <button>Verificar Relatórios</button>
        </section>
    </main>

</body>
</html>

